<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/order_confirm_input_address"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/top_bar"
        android:background="@color/white"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/order_confirm_input_address"
        android:textColor="@color/text_color_black"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/order_confirm_pay_type_area"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/order_confirm_input_address"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/order_confirm_pay"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/order_confirm_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:checked="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_confirm_remarks_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/order_confirm_pay_type_area"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/remark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/order_confirm_remarks"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/order_confirm_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/remark_text"
            android:layout_toRightOf="@id/remark_text"
            android:background="@android:color/transparent"
            android:hint="@string/order_confirm_remarks_hint"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/order_confirm_remarks_rl"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/order_confirm_receipt"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="@string/order_confirm_receipt_hint"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>